# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js*]
indent_style = space
indent_size = 2

[**.vue]
indent_style = space
indent_size = 2

[**.css]
indent_style = space
indent_size = 2

[**.scss]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[*.blade.php]
indent_style = space
indent_size = 2

[**.html]
indent_style = space
indent_size = 2

[**.{yml,yaml}]
indent_style = space
indent_size = 4
